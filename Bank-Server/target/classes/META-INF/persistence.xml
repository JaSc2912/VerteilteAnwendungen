<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence 
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    
    <persistence-unit name="BankPU" transaction-type="JTA">
        <jta-data-source>java:app/jdbc/BankDB</jta-data-source>
        
        <!-- Entity classes -->
        <class>de.hsnr.bank.entities.Benutzer</class>
        <class>de.hsnr.bank.entities.Kunde</class>
        <class>de.hsnr.bank.entities.Bankkonto</class>
        <class>de.hsnr.bank.entities.Transaktion</class>
        <class>de.hsnr.bank.entities.Kreditantrag</class>
        
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        
        <properties>
            <!-- Database schema generation -->
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="jakarta.persistence.schema-generation.create-source" value="metadata"/>
            <property name="jakarta.persistence.schema-generation.drop-source" value="metadata"/>
            
            <!-- Load initial data -->
            <property name="jakarta.persistence.sql-load-script-source" value="META-INF/load.sql"/>
            
            <!-- Derby specific settings -->
            <property name="jakarta.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
            
            <!-- Show SQL queries in development -->
            <property name="eclipselink.logging.level" value="FINE"/>
            <property name="eclipselink.logging.level.sql" value="FINE"/>
            
            <!-- Connection pool settings -->
            <property name="eclipselink.connection-pool.default.initial" value="5"/>
            <property name="eclipselink.connection-pool.default.min" value="5"/>
            <property name="eclipselink.connection-pool.default.max" value="20"/>
        </properties>
    </persistence-unit>
</persistence>
